<%- include('bootheader') -%>
<%- include('menubar') -%>
<div class="p-3 mb-4 bg-light">
  <div class="container-fluid ">
    <h1 class="pb-2 border-bottom">
      Add Skill</h1>
    <div class="p-2">
      <a href="/importSkills/<%= courseId %>" class="btn btn-sm btn-danger">
        Import Skills from another course
      </a>
      <hr> OR <hr>
      <h2>Enter Skill Information for a new Skill</h2>

      <form method="POST" action="/addSkill/<%= courseId %>">

        <div class="mb-3">
          <label for="name" class="form-label">Skill Name</label>
          <input required 
                minlength="3" maxlength="120" 
                class="form-control" type="text" name="name">
        </div>

        <div class="mb-3">
          Short Name (1 to 6 characters): 
          <input required 
                minlength="1" maxlength="6"  size="8"
                type="text" name="shortName">
        </div>

        <div class="mb-3">
          <label for="level" class="form-label">Skill Level</label>
          <select required class="form-control" type="text" name="level">
            <option value="F">fundamental</option>
            <option value="G">general</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Skill Description</label>
          <textarea class="form-control" name="description" 
               cols="100" rows="10"></textarea>
        </div>

        <input class="btn btn-lg btn-primary" type="submit">
      </form>
    </div>
  </div>
</div>

<%- include('bootfooter') -%>
<%- include('htmlfoot') -%>