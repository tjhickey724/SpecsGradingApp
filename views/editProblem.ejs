<%- include('bootheader') -%>
  <%- include('menubar') -%>
    <% if (!course.ownerId.equals(user._id)) { %>
      You must own the course to edit the problems
      <% } else { %>
        <div class="p-5 mb-4 bg-light">
          <div class="container-fluid ">
            <h1>Edit Problem</h1>
          </div>
        </div>

        <form method="post" action="/updateProblem/<%= problem._id %>">
          <br>
          <input type="checkbox" name='visible' <% if (problem.visible) {%> checked <% }%>
            value='visible'>
            Visible:
            <br>
            <input type="checkbox" name='answerable' <% if (problem.answerable) {%> checked <% }%>
              value='answerable'>
              Answerable:
              <br>
              <input type="checkbox" name='submitable' <% if (problem.submitable) {%> checked <% }%>
                value='submitable'>
                Submitable:
                <br>
                <input type="checkbox" name='peerReviewable' <% if (problem.peerReviewable) {%> checked <% }%>
                  value='peerReviewable'>
                  Peer Reviewable:
                  <br>
                  <hr>

                  Problem Title:<br>
                  <input type="text" name="description" value="<%= problem.description %>">
                  <br>
                  Problem Description:<br>
                  <textarea name="problemText" cols="100" rows="10"><%= problem.problemText %></textarea>
                  <br>
                  Problem Template:<br>
                  <textarea name="problemTemplate" cols="100" rows="10"><%= problem.problemTemplate %></textarea>
                  <br>
                  Rubric:<br>
                  Points: <input type="text" name="points" value="<%= problem.points %>"><br>
                  <textarea name="rubric" cols="100" rows="10"><%= problem.rubric %></textarea>
                  <h2>Skills</h2>
                  <% let skillIds=skills.map((x)=>x.id); console.log(skillIds) %>
                    <% for(let i=0;i<allSkills.length;i++){%>
                      <input type="checkbox" name="skill" value="<%= allSkills[i]._id%>" <% if
                        (skillIds.includes(allSkills[i].id)) {%> checked <%}%>
                        >
                        <%= allSkills[i].name %><br>
                          <% } %>
                            <hr>

                            <br>
                            <input class="btn btn-lg btn-primary" type="submit">
        </form>

        <% } %>

          <%- include('bootfooter') -%>