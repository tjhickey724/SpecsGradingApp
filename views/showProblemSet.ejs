<%- include('bootheader') -%>
<%- include('menubar') -%>
<div class="p-3 mb-4 bg-light">
  <div class="container-fluid ">
    <h1 class="pb-2 border-bottom">
      <%= problemSet.name.trim() || "Problem Set" %>
    </h1>
    <div class="p-2">

      <ul>
        <% for(i=0; i<psetProblems.length; i++){ 
          if (!psetProblems[i].problemId.visible &&
                            !(courseInfo.ownerId==user.id) ) { %>
          <li>Problem Hidden </li>
          <% } else {%>
          <li>


          <% const skillsToMaster=psetProblems[i].problemId.skills.filter( (skill)=>
                                        !skills.includes(skill.toString())).length
                                        %>
          <% if (skillsToMaster==0){ %>
          <a href="/removeProblem/<%= courseInfo._id%>/<%= psetId %>/<%= psetProblems[i].problemId._id %>">
            <span style="color:red">
              X
            </span>
          </a>
          <a href="/showProblem/<%= courseInfo._id%>/<%= psetProblems[i].problemId._id %>">
            <span style="color:green">
              <%= psetProblems[i].problemId.description || "no name" %>
              all skills in this problem have been mastered
            </span>
          </a>

          <% } else { %>
          <a href="/removeProblem/<%= courseInfo._id%>/<%= psetId %>/<%= psetProblems[i].problemId._id %>">
              <span style="color:red">
                X
              </span>
          </a>
          <a href="/showProblem/<%= courseInfo._id%>/<%= psetProblems[i].problemId._id %>">
            <%= psetProblems[i].problemId.description || "no name" %>
          </a>

          <%= skillsToMaster %>/<%= psetProblems[i].problemId.skills.length %> skills left to
          master<br>
          <% } %>
        </li>
        <% }} %>
      </ul>


      <hr>
      <% if (courseInfo.ownerId.equals(user._id)){ %>
      <a class="btn btn-sm btn-success" href="/addProblem/<%= courseInfo._id%>/<%= psetId %>">Add Problem</a>
      <a class="btn btn-sm btn-success" href="/showProblemCatalog/<%= courseInfo._id%>/<%= psetId %>">View Problem Library</a>
      <a href="/editProblemSet/<%=courseInfo._id%>/<%= psetId %>" class="btn btn-sm btn-info">Edit Problem Set</a>
      <a href="/downloadAsTexFile/<%=courseInfo._id%>/<%= psetId %>" class="btn btn-sm btn-info">Download as .tex file</a>
      <% } %>
      <a href="/showCourse/<%= problemSet.courseId %>" class="btn btn-sm btn-primary">Back to List
        of Problem
        Sets</a>
      <% if (user.taFor && (user.taFor).indexOf(problemSet.courseId)>=0 || courseInfo.ownerId.equals(user._id)) { %>
      <a class="btn btn-sm btn-warning" href="/gradeProblemSet/<%= courseInfo._id%>/<%= problemSet._id %>">Grade
        Problem Set
      </a>
      <a class="btn btn-sm btn-warning" href="/gradeProblemSet/<%= courseInfo._id%>/<%= problemSet._id %>/json">JSON grades
      </a>
      <% } %>
    </div>
  </div>
</div>


<%- include('bootfooter') -%>
<%- include('htmlfoot') -%>